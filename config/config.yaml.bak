datasets:
  tenx:
    id: pbmc_10k
    urls:
      - https://cf.10xgenomics.com/samples/cell-exp/3.0.0/pbmc_10k_v3/pbmc_10k_v3_fastqs.tar
    downsample_fraction: 1.0  # Use full dataset for PBMC analysis
    sample_name: pbmc_10k_v3
  isoform:
    enabled: false
    # Option A: small Smart-seq2/long-read single-cell dataset (example placeholder; update as needed)
    urls:
      - https://example.org/smartseq2_tiny.fastq.gz
    read_type: smartseq2
    downsample_fraction: 0.50

references:
  transcriptome:
    species: human
    tenx_ref: GRCh38-2020-A  # specify local path if already installed
    url: https://cf.10xgenomics.com/supp/cell-exp/refdata-gex-GRCh38-2020-A.tar.gz

cellranger:
  version: "7.2.0"
  chemistry: auto
  localcores: 6
  localmem: 32
  # HPC settings
  hpc:
    enabled: false  # Set to true when running on HPC
    module_name: "cellranger/7.2.0"  # Module to load on HPC
    job_memory: "32G"
    job_cpus: 6
    job_time: "4:00:00"
  # Local installation settings
  local:
    enabled: false  # Set to true when using local installation
    path: ""  # Leave empty to use system PATH, or specify full path to cellranger

qc:
  min_features: 200
  max_mt_percent: 15
  n_hvgs: 2000

trajectory:
  method: seurat_slingshot_like  # simple within-Seurat approach (no heavy deps)

flair:
  genome_fa: refs/GRCh38.primary_assembly.genome.fa
  gtf: refs/gencode.v41.basic.annotation.gtf
  threads: 6
  loci: ["LMNA", "PTPRC"]

report:
  output: report/report.html


